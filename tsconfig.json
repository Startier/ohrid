{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": true,
    "incremental": true,
    "baseUrl": "."
  },
  "lib": ["esnext"],
  "exclude": ["node_modules", "dist/**/*"]
}
